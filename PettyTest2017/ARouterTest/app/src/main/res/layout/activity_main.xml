<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ethanco.aroutertest.MainActivity">

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单跳转" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带参数跳转" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转返回结果" />

    <Button
        android:id="@+id/btn_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="携带url跳转" />

    <Button
        android:id="@+id/btn_module1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到module1" />

    <Button
        android:id="@+id/btn_by_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过byName调用服务" />

    <Button
        android:id="@+id/btn_by_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过byType调用服务" />

    <Button
        android:id="@+id/btn_interceptor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拦截器测试" />

    <Button
        android:id="@+id/btn_degrade_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转失败，已设置局部降级" />

    <Button
        android:id="@+id/btn_degrade_global"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转失败，没有设置局部降级，触发全局降级" />
</LinearLayout>
