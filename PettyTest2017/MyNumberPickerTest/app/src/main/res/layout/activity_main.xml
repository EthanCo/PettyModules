<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ethanco.mynumberpickertest.MainActivity">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        app:np_dividerColor="@android:color/transparent"
        app:np_formatter="@string/number_picker_formatter"
        app:np_height="180dp"
        app:np_max="23"
        app:np_min="0"
        app:np_selectedTextColor="#c5eafc"
        app:np_selectedTextSize="54sp"
        app:np_textColor="#7bc6ea"
        app:np_textSize="34sp"
        app:np_value="3"
        app:np_wheelItemCount="5"
        app:np_width="64dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
