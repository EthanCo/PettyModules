<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ethanco.eventbustest.MainActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="start second activity"
        app:layout_constraintLeft_toLeftOf="@+id/tv_info"
        app:layout_constraintRight_toRightOf="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        app:layout_constraintHorizontal_bias="0.491" />

    <Button
        android:id="@+id/btn_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="Start Sticky Activity"
        app:layout_constraintLeft_toLeftOf="@+id/button_second"
        app:layout_constraintRight_toRightOf="@+id/button_second"
        app:layout_constraintHorizontal_bias="0.857"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_second" />

</android.support.constraint.ConstraintLayout>
