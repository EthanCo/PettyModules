<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogBaseTextStyle">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogSecondTextStyle" parent="DialogBaseTextStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/textSize_body_V14</item>
    </style>

    <style name="DialogPrimaryTextStyle" parent="DialogBaseTextStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textSize_subHead_V18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTextButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_button_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/textSize_subHead_V16</item>
    </style>
</resources>